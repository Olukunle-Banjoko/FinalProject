<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Charging Station Information"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locinfo"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Location Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longinfo"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Longitude"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/latinfo"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Latitude"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/telinfo"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Contact Telephone Number"
        android:textStyle="bold" />

    <Button
        android:id="@+id/favadded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Favorites" />

    <Button
        android:id="@+id/directioninfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Get Direction" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

</LinearLayout>